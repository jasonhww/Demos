<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="取消任务"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="383dp"
            tools:layout_editor_absoluteX="148dp" android:id="@+id/btnCancel"/>
    <Button
            android:text="doAsync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="135dp" android:id="@+id/btnDoAsync"
            app:layout_constraintBottom_toTopOf="@+id/tvName" android:layout_marginBottom="168dp"/>
    <Button
            android:text="doIService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDoIService"
            app:layout_constraintBottom_toBottomOf="@+id/tvName" app:layout_constraintStart_toEndOf="@+id/btnDoAsync"
            android:layout_marginBottom="84dp" android:layout_marginStart="4dp"/>


</LinearLayout>